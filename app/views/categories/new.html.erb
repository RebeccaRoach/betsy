<section class="content">
  <h1 class = "catalog__header">Add a new category</h1>
  <hr>
  <% if @category.errors.any? %>
    <ul class="errors alert alert-danger" role="alert">
      <% @category.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @category, class: 'create-category' do |f| %>

    <div class = "form-group">
      <%= f.label :category_name %>
      <%= f.text_field :category_name, placeholder: "E.g. desert", class: 'form-control', required: true%>  
    </div>

    <%= f.submit "Add new category", class: 'product__new-button'%>
  <% end %>
</section>
