<section class="order-forms">
  <h2 class="h-center-text-no-pad">Checkout</h2>
  <section class='form-container'>
    <%= form_with model: @order do |f| %>

      <div class="form-group">
      <%= f.label :cc_name, 'Name' %>
      <%= f.text_field :cc_name, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :cc_num, 'Credit Card Number' %>
      <%= f.text_field :cc_num, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :cc_exp, 'Expiration Date' %>
      <%= f.text_field :cc_exp, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :cvv, 'CVV' %>
      <%= f.text_field :cvv, class:"form-control" %>
      </div>

      <div class="form-group">
      <%= f.label :zip, 'Billing Zip Code' %>
      <%= f.text_field :zip, class:"form-control" %>
      </div>

      <div class="form-group submit">
      <%= f.submit "Confirm", class:"btn btn-primary" %>
      </div>
    <% end %>
  </section>
</section>